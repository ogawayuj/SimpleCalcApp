<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="365dp"
            android:layout_height="80dp"
            android:text="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/display" android:textSize="60sp" android:layout_marginTop="68dp"
            android:layout_marginLeft="8dp" android:textAlignment="viewEnd"/>

    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClear" android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/display"/>
    <Button
            android:text="รท"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDiv" android:textAlignment="center"
            android:textSize="24sp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/display"
            app:layout_constraintStart_toEndOf="@+id/btnClear" android:layout_marginStart="176dp"/>

    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn7" android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/btn8" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnClear" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn8" android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="113dp" app:layout_constraintTop_toBottomOf="@+id/display"
            app:layout_constraintStart_toEndOf="@+id/btn7"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn9" android:textAlignment="center"
            android:textSize="24sp" android:layout_marginTop="113dp"
            app:layout_constraintTop_toBottomOf="@+id/display" app:layout_constraintStart_toEndOf="@+id/btn8"/>
    <Button
            android:text="ร"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMulti" android:textAlignment="center"
            android:textSize="24sp" android:layout_marginTop="113dp"
            app:layout_constraintTop_toBottomOf="@+id/display" app:layout_constraintStart_toEndOf="@+id/btn9"/>

    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn4" android:textAlignment="center"
            android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn5" android:textAlignment="center"
            android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/btn4"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn8"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn6" android:textAlignment="center"
            android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn9" app:layout_constraintStart_toEndOf="@+id/btn5"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSub"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMulti"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1" android:textAlignment="center"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn4"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2" android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn5"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3" android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn6"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd" android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSub"/>

    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn0" android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEqual" android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnAdd"
            app:layout_constraintStart_toEndOf="@+id/btn0" android:layout_marginStart="176dp"/>
</android.support.constraint.ConstraintLayout>